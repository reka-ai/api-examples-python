{
  "name": "reka-restaurants",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.json && esbuild src/client.ts --bundle --outfile=public/app.js --platform=browser --format=esm",
    "dev": "concurrently -k -n SERVER,WEB \"ts-node-dev --respawn --transpile-only --esm src/server.ts\" \"esbuild src/client.ts --bundle --outfile=public/app.js --platform=browser --format=esm --watch\"",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "openai": "^5.12.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "concurrently": "^8.2.2",
    "esbuild": "^0.21.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
